# Use Python 3.11 slim image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies needed for image processing and scientific computing
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libffi-dev \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better Docker layer caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create directories for temporary files if needed
RUN mkdir -p /app/temp

# Expose port 8000
EXPOSE 8000

# =============================
# Environment variable to choose which app to run
# Default = main:app (production mode)
# You can override this in Railway â†’ Variables (APP_MODULE = mainmed:app)
# =============================
ENV APP_MODULE=main:app

# Start the FastAPI app using Uvicorn with the selected module
CMD ["sh", "-c", "uvicorn $APP_MODULE --host 0.0.0.0 --port ${PORT:-8000}"]

